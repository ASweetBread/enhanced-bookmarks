{
	// 清单文件的版本，这个必须写，而且必须是2
	"manifest_version": 3,
	// 插件的名称
	"name": "enhanced-bookmarks",
	// 插件的版本
	"version": "1.0.0",
	// 插件描述
	"description": "增强书签功能插件",
	// 图标，一般偷懒全部用一个尺寸的也没问题
	"icons":
	{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	// 会一直常驻的后台JS或后台页面
	"background":
	{
		// 2种指定方式，如果指定JS，那么会自动生成一个背景页
		// "page": "background.html"
		"service_worker": "js/background.js",
        "type": "module"
	},
	// 浏览器右上角图标设置，browser_action、page_action、app必须三选一
	"action": 
	{
		"default_icon": "img/icon.png",
		// 图标悬停时的标题，可选
		"default_title": "这是一个示例Chrome插件",
		"default_popup": "popup.html"
	},
	// 需要直接注入页面的JS
	"content_scripts": 
	[
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["js/get-node.js", "js/get-lineation-array.js", "js/content-script.js"],
			"css": ["css/custom.css"],
            "run_at": "document_end"
		}
	],
	// 权限申请
	"permissions":
	[
		"bookmarks", // 书签
		"contextMenus", // 右键菜单
		"tabs", // 标签
		"notifications", // 通知
		"webRequest", // web请求
		"storage" // 插件本地存储
	],
	// 向地址栏注册一个关键字以提供搜索建议，只能设置一个关键字
	"omnibox": { "keyword" : "go" }
	// 默认语言-支持其他语言需要额外的配置
	// "default_locale": "zh_CN", 
}